{
    "name": "openvidu-react",
    "version": "1.0.0",
    "description": "OpenVidu Components library for React applications",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "lib:build": "rm -rf dist/ && prettier --write src/ && npm run build:esm && npm run build:cjs",
        "lib:serve": "tsc --watch",
        "build:esm": "tsc",
        "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
        "start": "cd openvidu-components-testapp && npm run prepare && npm run start",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "CSantosM",
    "license": "Apache2.0",
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^18.7.18",
        "@types/react": "^18.0.20",
        "@types/react-dom": "^18.0.6",
        "prettier": "^2.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "typescript": "^4.8.3",
        "web-vitals": "^2.1.4"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
